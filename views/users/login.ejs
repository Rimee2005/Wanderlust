<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="text-center mb-4">Login for Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <!-- Username Field -->
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>

      <!-- Email Field -->
      <!-- <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please provide a valid email address.</div>
      </div> -->

      <!-- Password Field -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Strong!</div>
        <div class="invalid-feedback">Please set a strong password.</div>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-success">Login</button>
    </form>
  </div>
</div>


